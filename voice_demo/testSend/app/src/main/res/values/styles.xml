<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 未占满全屏的底部按钮style<-->
    <style name="btn_bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/forty_eight_width_height</item>
        <item name="android:layout_marginLeft">@dimen/sixteen_width_height</item>
        <item name="android:layout_marginRight">@dimen/sixteen_width_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_radius</item>
        <item name="android:textSize">@dimen/sixteen_font</item>
    </style>
</resources>
