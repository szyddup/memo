<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.xiaoi.app.testsend.MainActivity">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/btn_update_ip"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_update_ip"
        android:layout_width="wrap_content"
        android:text="更改连接地址"
        android:onClick="updateIp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_update_ip"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_edit_found"
        android:hint="请输入要说的话"
        android:gravity="top"
        android:padding="10dp"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@null" />

    <Button
        android:onClick="sendMessage"
        android:layout_below="@+id/et_message"
        android:id="@+id/btn_find_start"
        style="@style/btn_bottom_style"
        android:layout_marginTop="@dimen/twenty_width_height"
        android:text="发送消息" />


</RelativeLayout>
